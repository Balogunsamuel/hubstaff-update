# Environment Configuration Template
# Copy this file to .env and configure for your environment

# Database Configuration
MONGO_URL="mongodb://localhost:27017"
DB_NAME="hubstaff_clone"

# Security Configuration - CHANGE THIS IN PRODUCTION!
SECRET_KEY="your-super-secret-key-change-in-production-hubstaff-clone-2025"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Environment
ENVIRONMENT="development"

# File Storage Configuration
STORAGE_TYPE="local"
UPLOAD_DIR="uploads"
MAX_FILE_SIZE="10485760"

# AWS S3 Configuration (if using cloud storage)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="us-east-1"
# S3_BUCKET_NAME=""

# Email Configuration (optional - will print to console if not configured)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USERNAME="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_FROM_EMAIL="your-email@gmail.com"

# Admin Configuration
DEFAULT_ADMIN_EMAIL="admin@example.com"
DEFAULT_ADMIN_PASSWORD="CHANGE-THIS-PASSWORD"

# Security Settings
INVITATION_EXPIRE_DAYS="7"
ACCESS_TOKEN_EXPIRE_MINUTES="30"

# Production Database Example (MongoDB Atlas)
# MONGO_URL="mongodb+srv://username:password@cluster.mongodb.net/"
# DB_NAME="hubstaff_clone_prod"

# Production Frontend URL Example
# FRONTEND_URL="https://yourdomain.com"
# ALLOWED_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"

# Optional: Redis (for caching)
# REDIS_URL="redis://localhost:6379"

# Optional: Monitoring & Logging
# SENTRY_DSN=""
# LOG_LEVEL="INFO"